<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@a_book.user) do %>
            <%= image_tag @a_book.user.get_profile_image, size:"100x100" %><br>
            <%= @a_book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @a_book.title, @a_book %></td>
          <td><%= @a_book.body %></td>
          <% if @a_book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@a_book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @a_book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% else %>
          <% end %>
          <td>
            コメント数<%= @a_book.book_comments.count %>
          </td>
        </tr>

        <% @a_book.book_comments.each do |comment| %>
          <tr>
            <td><%= image_tag comment.user.get_profile_image, size:'50x50' %>
              <p><%= comment.user.name %>
            </td>
            <td><%= comment.comment %></td>
            <% if comment.user == current_user %>
              <td>
                <%= link_to 'Destroy',book_book_comment_path(@a_book, comment),method: :delete ,class: "btn btn-danger" %>
              </td>
            <% else %>
            <td></td>
            <% end %>
          </tr>
        <% end %>

      </table>
      <%= form_with model: [@a_book, @comment] do |f| %>
        <%= f.text_area :comment %>
        <p><%= f.submit '送信' %></p>
      <% end %>
    </div>
  </div>
</div>