  <% book.book_comments.each do |comment| %>
  <tr>
  <td><%= image_tag comment.user.get_profile_image, size:'50x50' %>
    <p><%= comment.user.name %>
  </td>
  <td><%= comment.comment %></td>
  <% if comment.user == current_user %>
    <td>
      <%= link_to 'Destroy',book_book_comment_path(book, comment),method: :delete ,remote: true , class: "btn btn-danger" %>
    </td>
  <% else %>
  <td></td>
  <% end %>
  </tr>
  <% end %>
</table>

<%= form_with model: [book, @comment] ,local: false  do |f| %>
  <%= f.text_area :comment %>
  <p><%= f.submit '送信' %></p>
<% end %>
